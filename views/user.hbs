 <div class="container">
   <div class="row" style="justify-content: center;">
    <div class="col s12 m5">
      <div class="card">
        <div class="card-image">
          <img src="{{user.img}}">
          <span class="card-title">{{user.name}}</span>
        </div>
        <div class="card-content">
          <p>{{user.password}}</p>
        </div>
        <div class="card-action">
          <a class="btn" href="delete/{{user.id}}" style="background-color: red;">Delete</a>
          <a class="btn" href="update/{{user.id}}">Update</a>
        </div>
      </div>
    </div>
  </div>
 </div>